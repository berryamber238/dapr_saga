{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "DaprSagaDB"
  },
  "Dapr": {
    "StateStore": "statestore",
    "PubSub": "pubsub"
  },
  "RetryPolicy": {
    "MaxRetries": 3,
    "InitialDelayMilliseconds": 1000
  },
  "nacos": {
    "ServerAddresses": [ "http://localhost:8848" ],
    "DefaultTimeOut": 15000,
    "Namespace": "public",
    "ListenInterval": 1000,
    "ServiceName": "saga-coordinator",
    "Listeners": [
      {
        "Optional": true,
        "DataId": "saga-coordinator.json",
        "Group": "DEFAULT_GROUP"
      },
      {
        "Optional": true,
        "DataId": "shared-config.json",
        "Group": "DEFAULT_GROUP"
      }
    ]
  }
}
